<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mq.uag.apachelogviewer.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:text="Client"
            android:id="@+id/group_clients"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Serveurs"
                android:textSize="12dp"
                android:id="@+id/group_serveurs"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/group_code"
                android:textSize="12dp"
                android:text="Code"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="URL"
                android:textSize="12dp"
                android:id="@+id/group_url"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="Reset"
                android:textSize="12dp"
                android:id="@+id/group_reset"/>

        </LinearLayout>
        <ExpandableListView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="1dp"

            android:id="@+id/mainLV" />

    </LinearLayout>

</RelativeLayout>
